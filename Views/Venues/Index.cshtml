@model IEnumerable<EventEase2.Models.Venue>

@{
    ViewData["Title"] = "Venues";
}

<h1>Index</h1> 
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}


<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>
</p>

<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>Venue ID</th>
            <th>Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th> 
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VenueId</td>
                <td>@item.VenueName</td>
                <td>@item.Location</td>
                <td>@item.Capacity</td>
                <td>
                    <img src="@item.ImageURL" alt="@item.VenueName" style="max-height: 100px; max-width: 150px;" class="img-thumbnail" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>

}
    </tbody>
</table>
