@model IEnumerable<EventEase2.Models.Booking>
@{
    ViewData["Title"] = "Bookings";
}

<h2>Bookings</h2>

<!--Search Form here -->
<form asp-action="Index" method="get">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholer
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<!-- Show Success Messages (tempdata) -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>


<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
    <thead>
        <tr>
            <th>BookingID</th>
            <th>Event</th>
            <th>Venue</th>
            <th>BookingDate</th>
            <th>Actions</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingId</td>
                <td>@booking.Venue?.VenueName</td>
                <td>@booking.Event?.EventName</td>
                <td>@booking.Date.ToString("yyyy-MM-dd")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@booking.BookingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@booking.BookingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@booking.BookingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
