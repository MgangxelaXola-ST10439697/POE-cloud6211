@model EventEase2.Models.Booking

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Date field -->
            <div class="form-group mb-3">
                <label asp-for="Date" class="form-label"></label>
                <input asp-for="Date" type="datetime-local" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <!-- Event Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="EventId" class="form-label">EventId</label>
                <select asp-for="EventId" class="form-control" asp-items="@(ViewBag.EventId as SelectList)">
                    <option value="">-- Select Event --</option>
                </select>
                <span asp-validation-for="EventId" class="text-danger"></span>
            </div>

            <!-- Venue Dropdown -->
            <div class="form-group mb-3">
                <label asp-for="VenueId" class="form-label">VenueId</label>
                <select asp-for="VenueId" class="form-control" asp-items="@(ViewBag.VenueId as SelectList)">
                    <option value="">-- Select Venue --</option>
                </select>
                <span asp-validation-for="VenueId" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>